APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Google Analytics (GA4)
# Get your tracking ID from: https://analytics.google.com
GOOGLE_ANALYTICS_TRACKING_ID=

VITE_APP_NAME="${APP_NAME}"

# ============================================================================
# Blog Automation Configuration
# ============================================================================

# AI Content Generation (OpenRouter)
OPENROUTER_API_KEY=
BLOG_PRIMARY_MODEL=deepseek/deepseek-chat
BLOG_FALLBACK_MODEL=anthropic/claude-3.5-sonnet


# Image Generation Provider
# Options: 'fal' (Fal.ai - Production) or 'together' (Together.ai - Development)
# Recommendation:
#   - Local: BLOG_IMAGE_PROVIDER=together (cheaper: $0.003/image)
#   - Production: BLOG_IMAGE_PROVIDER=fal (better quality: $0.046/image)
BLOG_IMAGE_PROVIDER=together

# Provider Fallback Configuration
BLOG_IMAGE_PRIMARY_PROVIDER=together
BLOG_IMAGE_FALLBACK_PROVIDER=fal

# Fal.ai API (Production - Better Quality)
FAL_API_KEY=

# Together.ai API (Development - Cheaper)
TOGETHER_API_KEY=

# Image Models Configuration
# Fal.ai models
BLOG_IMAGE_PRIMARY_MODEL=fal-ai/flux/dev
BLOG_IMAGE_FALLBACK_MODEL=fal-ai/flux/schnell

# Together.ai models
BLOG_IMAGE_TOGETHER_PRIMARY=black-forest-labs/FLUX.1-schnell
BLOG_IMAGE_TOGETHER_FALLBACK=black-forest-labs/FLUX.1-dev

# Image Settings
BLOG_FEATURED_IMAGES_COUNT=1
BLOG_IMAGE_WIDTH=1792
BLOG_IMAGE_HEIGHT=1024

# Telegram Notifications (Optional)
BLOG_TELEGRAM_ENABLED=false
BLOG_TELEGRAM_BOT_TOKEN=
BLOG_TELEGRAM_CHAT_ID=

# ============================================================================
# Cross-Platform Publishing APIs
# ============================================================================

# Dev.to API
# Get your API key from: https://dev.to/settings/extensions
DEVTO_API_KEY=

# Hashnode API (Future)
# HASHNODE_API_TOKEN=
# HASHNODE_PUBLICATION_ID=

# LinkedIn API (Future)
