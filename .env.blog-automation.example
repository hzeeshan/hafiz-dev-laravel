# ===================================================================
# Blog Automation System - Environment Variables
# ===================================================================
# Copy these variables to your .env file and fill in the values
# ===================================================================

# -------------------------------------------------------------------
# AI Content Generation (OpenRouter)
# -------------------------------------------------------------------
BLOG_AI_PROVIDER=openrouter
OPENROUTER_API_KEY=sk-or-v1-...
OPENROUTER_SITE_URL=https://hafiz.dev
OPENROUTER_SITE_NAME="Hafiz Dev Blog"

# Model Configuration (TESTING: Use FREE models)
BLOG_PRIMARY_MODEL=deepseek/deepseek-chat-v3.1:free
BLOG_FALLBACK_MODEL=google/gemini-2.0-flash-thinking-exp:free
BLOG_FAST_MODEL=google/gemini-2.0-flash-thinking-exp:free
BLOG_REASONING_MODEL=deepseek/deepseek-r1

# Model Configuration (PRODUCTION: Switch to paid models for better quality)
# BLOG_PRIMARY_MODEL=deepseek/deepseek-chat
# BLOG_FALLBACK_MODEL=anthropic/claude-3.5-sonnet
# BLOG_REASONING_MODEL=deepseek/deepseek-r1

# Content Settings
BLOG_MIN_WORD_COUNT=1500
BLOG_MAX_WORD_COUNT=2500
BLOG_DEFAULT_AUTHOR_ID=1

# -------------------------------------------------------------------
# Image Generation (Fal.ai)
# -------------------------------------------------------------------
BLOG_IMAGE_PROVIDER=fal
FAL_API_KEY=...

# Image Model Configuration
BLOG_IMAGE_PRIMARY_MODEL=fal-ai/flux/dev
BLOG_IMAGE_FALLBACK_MODEL=fal-ai/flux/schnell
BLOG_IMAGE_HQ_MODEL=fal-ai/flux-pro

# Image Settings
BLOG_FEATURED_IMAGES_COUNT=1
BLOG_INLINE_IMAGES_COUNT=0
BLOG_IMAGE_WIDTH=1792
BLOG_IMAGE_HEIGHT=1024
BLOG_IMAGE_FORMAT=jpeg
BLOG_IMAGE_QUALITY=90

# -------------------------------------------------------------------
# Automation Settings
# -------------------------------------------------------------------
BLOG_AUTO_GENERATION_ENABLED=false
BLOG_GENERATION_FREQUENCY=3
BLOG_SCHEDULE_CHECK_INTERVAL=5
BLOG_REQUIRE_REVIEW=true

# Quality Control
BLOG_REQUIRE_CODE=true
BLOG_MIN_CODE_BLOCKS=1

# -------------------------------------------------------------------
# Multi-Platform Distribution
# -------------------------------------------------------------------
BLOG_DISTRIBUTION_ENABLED=false
BLOG_DISTRIBUTION_DELAY=48

# Platform Flags
BLOG_PUBLISH_DEVTO=true
BLOG_PUBLISH_HASHNODE=true
BLOG_PUBLISH_LINKEDIN=true
BLOG_PUBLISH_MEDIUM=false

# Dev.to API
DEVTO_API_KEY=...

# Hashnode API
HASHNODE_API_TOKEN=...
HASHNODE_PUBLICATION_ID=...

# LinkedIn API
LINKEDIN_CLIENT_ID=...
LINKEDIN_CLIENT_SECRET=...
LINKEDIN_REDIRECT_URI=https://hafiz.dev/auth/linkedin/callback

# Medium API (optional)
MEDIUM_INTEGRATION_TOKEN=...

# -------------------------------------------------------------------
# Notifications (Telegram)
# -------------------------------------------------------------------
BLOG_TELEGRAM_ENABLED=true
BLOG_TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
BLOG_TELEGRAM_CHAT_ID=123456789
BLOG_TELEGRAM_ON_SUCCESS=true
BLOG_TELEGRAM_ON_FAILURE=true
BLOG_TELEGRAM_ON_REVIEW=true

# -------------------------------------------------------------------
# Budget & Cost Tracking
# -------------------------------------------------------------------
BLOG_MONTHLY_BUDGET=5.00

# -------------------------------------------------------------------
# Content Templates
# -------------------------------------------------------------------
BLOG_AUTHOR_BIO="Hafiz Riaz is a Laravel developer and automation expert. Need help with your project? Contact me at hafiz.dev"
BLOG_HIRE_CTA="Need help implementing this? Let's work together: [Contact me](https://hafiz.dev)"

# ===================================================================
# Quick Start (Minimum Required)
# ===================================================================
# 1. OpenRouter API Key: https://openrouter.ai/keys
# 2. Fal.ai API Key: https://fal.ai/dashboard/keys
# 3. Telegram Bot (optional): @BotFather on Telegram
# ===================================================================
